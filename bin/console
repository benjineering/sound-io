#!/usr/bin/env ruby

require 'bundler/setup'
require 'sound_io'

#require 'irb'
#IRB.start(__FILE__)

sio = SoundIO::Context.new
sio.connect
sio.flush_events

out_dev = sio.output_device
raise 'No output device' if out_dev.nil?

out_stream = out_dev.create_stream(format: :float32be)
puts out_stream[:format]
